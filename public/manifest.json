{
  "manifest_version": 3,
  "name": "Notyqo",
  "version": "1.0.0",
  "description": "Dual-space note-taking extension with rich text editing",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_title": "Notyqo - Open Full App"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/quick-note.tsx"]
    }
  ]
}
